extends _layout

block link
  -var selected = 'playground';

block content

  .block.block--playground

      h2 Playground
      p Test the awesomeness!

      .textareas

        .textarea
          h3 Source
          p Write or paste code here
          textarea#input.
            div {
              display: flex;
              background: linear-gradient(red, blue);
            }

        .textarea
          h3 Result
          p
            strong See the result
            |  (with [default options](options.html))
          textarea#output

  script(src='pleeease.js')